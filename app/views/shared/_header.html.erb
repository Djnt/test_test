<div class='top-header'>
  <div class='header-buttons'>
    <% if(user_signed_in?) %>
      <button class='btn btn-primary' onClick="logout()" >Logout</button>
      <h4><%= 'Hi, ' + current_user.email %><h2>
    <% else %>
      <a href="/users/sign_in"><button class='btn btn-primary'>Login/Register</button></a>
    <% end %>
  </div>
</div>